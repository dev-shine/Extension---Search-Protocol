{
  "manifest_version": 2,

  "name": "Bridgit",
  "description": "__MSG_description__",
  "version": "0.1.1.9",
  "default_locale": "en",

  "icons": {
    "128": "icon.png"
  },

  "browser_action": {
    "default_title": "Bridgit",
    "default_popup": "popup.html",
    "default_icon": {
      "38": "icon.png",
      "128": "icon.png"
    }
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "web_accessible_resources": [
    "inject.js",
    "related_elements.html",
    "related_elements.js",
    "annotate.html",
    "annotate.js",
    "image_area.html",
    "image_area.js",
    "build_bridge.html",
    "build_bridge.js",
    "after_create_bridge.html",
    "after_crate_bridge.js",
    "upsert_relation.html",
    "upsert_relation.js",
    "upsert_note_type.html",
    "upsert_note_type.js",
    "element_description.html",
    "element_description.js",
    "flag_content.js",
    "flag_content.html",
    "share_content.js",
    "share_content.html",
    "vendor.js",
    "antd.css"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_start"
    }
  ],

  "content_security_policy": "script-src 'self' 'unsafe-eval' https://www.google-analytics.com; object-src 'self'",
  "permissions": [
    "storage",
    "tabs",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ]
}
