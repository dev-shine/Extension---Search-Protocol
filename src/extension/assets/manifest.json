{
  "manifest_version": 2,

  "name": "Bridgit",
  "description": "Bridgit enables the user to link content within a web page to content with another web page.",
  "version": "1.3.1",

  "icons": {
    "128": "logo.png"
  },

  "browser_action": {
    "default_title": "Bridgit",
    "default_popup": "popup.html",
    "default_icon": {
      "38": "logo.png"
    }
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "web_accessible_resources": [
    "inject.js",
    "links_modal.html",
    "links_modal.js",
    "annotate.html",
    "annotate.js",
    "image_area.html",
    "image_area.js",
    "build_bridge.html",
    "build_bridge.js",
    "after_create_bridge.html",
    "after_crate_bridge.js",
    "vendor.js",
    "antd.css"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_end"
    }
  ],

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",

  "permissions": [
    "storage",
    "tabs",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ]
}
